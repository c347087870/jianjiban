{
  "name": "jianjiban",
  "version": "1.0.0",
  "description": "简记办 - 基于 Electron 的桌面待办工具",
  "main": "electron/main.js",
  "author": "JianJiBan Team",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electronmon electron/main.js",
    "build": "vite build && electron-builder",
    "build:vite": "vite build",
    "build:electron": "electron-builder",
    "lint": "eslint . --ext .js,.vue",
    "preview": "vite preview"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "element-plus": "^2.11.8",
    "moment": "^2.30.1",
    "quill": "^2.0.0",
    "uuid": "^9.0.1",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "concurrently": "^8.2.2",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.0",
    "electronmon": "^2.0.3",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.20.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  }
  
}
